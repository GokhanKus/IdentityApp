@model IEnumerable<AppUser>

<a class="btn btn-primary" asp-controller="Users" asp-action="Create">Create User</a>
<hr />
<table class="table table-sm table-bordered">

	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email Address</th>
			<th style="width:120px"></th>
		</tr>

	</thead>

	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FullName</td>
				<td>@user.Email</td>
				<td>
					<a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>

					<form asp-controller="users" asp-action="delete" method="post" onsubmit="return confirm('emin misiniz')" style="display:inline-block">
						@*onsubmit kısmı delete ye basıldıgı anda emin misiniz diye sorar direkt silinmemesi icin*@
						<input type="hidden" value="@user.Id" name="id" />
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>

				</td>
			</tr>
		}
	</tbody>

</table>